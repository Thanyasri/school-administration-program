#school administration program
def write_on_csv(info_list):
    with open('student_info.csv', 'a', newline='') as csv_file:
        writer = csv.writer(csv_file)

        if csv_file.tell() == 0:
            writer.writerow(["Name", "Age", "Contact number", "Email ID", "class", "group"])

        writer.writerow(info_list)
if __name__=='__main__':
    condition = True
    student_num = 1

    while(condition):
        student_info = input("Enter student information #{} in the following format(Name Age Contact number Email ID class group): ".format(student_num))

    student_info_list = student_info.split(' ')

    print("\nThe entered information is -\nName: {}\nAge: {}\nContact_number: {}\nEmail ID: {}\nclass :{}\ngroup{}"
            .format(student_info_list[0], student_info_list[1], student_info_list[2], student_info_list[3], student_info_list[4], student_info_list[5] ))

    choice_check = input("Is the entered information correct? (yes/no): ")

    if choice_check =="yes":
        write_on_csv(student_info_list)

        choice_check = input("Enter (yes/no) if you want to enter information for student: ")
        if condition_check == "yes":
           condition = True
           student_num = student_num + 1
        elif condition_check == "no":
            condition = False
        elif choice_check == "no":
            print("\nre-enter the values!")
